# ===========================================
# Sentry for AI - Environment Variables
# ===========================================
# Copy this file to `.env` and fill in the values.
# NEVER commit your .env file to git!

# ----- Redis (Upstash) -----
# Get free Redis at: https://upstash.com
# 1. Sign up -> Create Database -> Select "Global" region
# 2. Go to "Details" tab -> Copy the connection string
# Format: redis://default:<password>@<endpoint>:<port>
REDIS_URL=redis://default:your_password@your-endpoint.upstash.io:6379

# ----- ClickHouse (Aiven or Tinybird) -----
# Option 1: Aiven (https://aiven.io) - Free tier available
# Option 2: Tinybird (https://tinybird.co) - Free tier available
# Option 3: Self-hosted on DigitalOcean ($200 credit from Student Pack)
CLICKHOUSE_HOST=your_host.aivencloud.com
CLICKHOUSE_PORT=9000
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=your_password
CLICKHOUSE_DATABASE=default

# ----- API Configuration -----
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# =============================================================================
# Monitoring & Observability
# =============================================================================

# Sentry Error Tracking (Get DSN from https://sentry.io)
# Free tier: 5,000 errors/month - perfect for MVP
SENTRY_DSN=https://your_key@o000000.ingest.sentry.io/0000000
SENTRY_ENVIRONMENT=development  # Options: development, staging, production
ENV=development

# Datadog APM (Get API key from https://app.datadoghq.com)
DATADOG_ENABLED=false
DATADOG_API_KEY=
DD_SERVICE=lynex
DD_ENV=development
DD_VERSION=1.0.0

# ----- Auth (Supabase) -----
# Get free Supabase at: https://supabase.com
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# ----- Admin -----
ADMIN_API_KEY=your-secret-admin-key

# =============================================================================
# Frontend (Vite)
# =============================================================================

# Sentry for React frontend
VITE_SENTRY_DSN=https://your_key@o000000.ingest.sentry.io/0000000
VITE_SENTRY_ENVIRONMENT=development
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
VITE_API_URL=http://localhost:8001
