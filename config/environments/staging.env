# =============================================================================
# Lynex - Staging Environment Configuration
# =============================================================================
# Use for pre-production testing before deploying to production.
# Typically points to separate staging instances of all services.

# Environment
ENV=staging
DEBUG=false

# =============================================================================
# Database - ClickHouse
# =============================================================================
# Use staging ClickHouse instance
CLICKHOUSE_HOST=staging-clickhouse.example.com
CLICKHOUSE_PORT=9000
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=${CLICKHOUSE_PASSWORD}
CLICKHOUSE_DATABASE=default

# =============================================================================
# Queue - Redis
# =============================================================================
# Use staging Redis instance (e.g., Upstash staging database)
REDIS_URL=${REDIS_URL}
QUEUE_MODE=redis

# =============================================================================
# Authentication - Supabase
# =============================================================================
# Use staging Supabase project
SUPABASE_URL=${SUPABASE_URL}
SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}
SUPABASE_SERVICE_KEY=${SUPABASE_SERVICE_KEY}

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
INGEST_API_PORT=8001
UI_BACKEND_PORT=8000
BILLING_PORT=8002

# CORS - staging frontend URL
CORS_ORIGINS=https://staging.lynex.app

# =============================================================================
# Admin
# =============================================================================
ADMIN_API_KEY=${ADMIN_API_KEY}

# =============================================================================
# Monitoring
# =============================================================================
SENTRY_DSN=${SENTRY_DSN}
SENTRY_ENVIRONMENT=staging

# Datadog
DATADOG_ENABLED=false
DATADOG_API_KEY=
DD_SERVICE=lynex
DD_ENV=staging
DD_VERSION=1.0.0

# =============================================================================
# Frontend (Vite)
# =============================================================================
VITE_API_URL=https://staging-api.lynex.app
VITE_SUPABASE_URL=${SUPABASE_URL}
VITE_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}
VITE_SENTRY_DSN=${SENTRY_DSN}
VITE_SENTRY_ENVIRONMENT=staging
